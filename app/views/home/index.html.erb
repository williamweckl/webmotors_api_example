<form action="/models" method="GET">
  <p>
    <label>Escolha a Fabricante:</label>
    <select name="webmotors_make_id">
      <% @brands.each do |make| %>
        <option value="<%= make.webmotors_id %>"><%= make.name %></option>
      <% end %>
    </select>
  </p>

  <input type="submit" value="Buscar modelos">
</form>
